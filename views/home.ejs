<%- include('partials/header') %>

    <main>
        <section class="hero">
            <div class="container">
                <div class="hero-content">
                    <h1>SheenClassics</h1>
                    <p>Premium Embroidered Clothing for the Modern Classic</p>
                    <a href="/products" class="hero-btn">Shop Now</a>
                </div>
            </div>
        </section>

        <% if (featuredProducts && featuredProducts.length > 0) { %>
            <section class="section">
                <div class="container">
                    <h2 class="section-title">Featured Products</h2>
                    <div class="product-grid">
                        <% featuredProducts.forEach(product => { %>
                            <div class="product-card" onclick="window.location.href='/products/<%= product._id %>'">
                                <img src="<%= product.images && product.images[0] ? product.images[0] : '/images/p1.jpeg' %>" alt="<%= product.name %>" class="product-image">
                                <div class="product-info">
                                    <h3 class="product-name">
                                        <%= product.name %>
                                    </h3>
                                    <div class="product-price">
                                        Rs
                                        <%= product.price.toFixed(2) %>
                                            <% if (product.originalPrice && product.originalPrice > product.price) { %>
                                                <span class="original">Rs<%= product.originalPrice.toFixed(2) %></span>
                                                <% } %>
                                    </div>
                                    <div class="product-actions">
                                        <button class="btn btn-add-cart" onclick="event.stopPropagation(); addToCart('<%= product._id %>')">Add to Cart</button>
                                        <button class="btn btn-wishlist" onclick="event.stopPropagation(); addToWishlist('<%= product._id %>')">♡</button>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                </div>
            </section>
            <% } %>

                <section class="section">
                    <div class="container">
                        <div class="home-images">
                            <img src="/images/EMB1.jpeg" alt="Embroidered Design 1" class="home-image">
                            <img src="/images/EMB2.jpeg" alt="Embroidered Design 2" class="home-image">
                            <img src="/images/p1.jpeg" alt="Product 1" class="home-image">
                            <img src="/images/p2.jpeg" alt="Product 2" class="home-image">
                            <img src="/images/bag.jpeg" alt="Bag" class="home-image">
                            <img src="/images/mypic.jpeg" alt="Collection" class="home-image">
                        </div>
                    </div>
                </section>

                <% if (newProducts && newProducts.length > 0) { %>
                    <section class="section">
                        <div class="container">
                            <h2 class="section-title">New Arrivals</h2>
                            <div class="product-grid">
                                <% newProducts.forEach(product => { %>
                                    <div class="product-card" onclick="window.location.href='/products/<%= product._id %>'">
                                        <img src="<%= product.images && product.images[0] ? product.images[0] : '/images/p1.jpeg' %>" alt="<%= product.name %>" class="product-image">
                                        <div class="product-info">
                                            <h3 class="product-name">
                                                <%= product.name %>
                                            </h3>
                                            <div class="product-price">
                                                Rs
                                                <%= product.price.toFixed(2) %>
                                                    <% if (product.originalPrice && product.originalPrice > product.price) { %>
                                                        <span class="original">Rs<%= product.originalPrice.toFixed(2) %></span>
                                                        <% } %>
                                            </div>
                                            <div class="product-actions">
                                                <button class="btn btn-add-cart" onclick="event.stopPropagation(); addToCart('<%= product._id %>')">Add to Cart</button>
                                                <button class="btn btn-wishlist" onclick="event.stopPropagation(); addToWishlist('<%= product._id %>')">♡</button>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                            </div>
                        </div>
                    </section>
                    <% } %>
    </main>

    <%- include('partials/footer') %>