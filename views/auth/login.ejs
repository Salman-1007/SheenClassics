<%- include('../partials/header') %>

<main>
    <section class="section">
        <div class="container">
            <div class="form-container">
                <h1 style="font-family: 'Playfair Display', serif; text-align: center; margin-bottom: 2rem; font-size: 2.5rem;">
                    <%= isAdmin ? 'Admin Login' : 'Login' %>
                </h1>
                
                <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message"><%= error %></div>
                <% } %>
                
                <form action="/auth/login<%= isAdmin ? '?admin=true' : '' %>" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <button type="submit" class="btn btn-add-cart" style="width: 100%;">Login</button>
                </form>
                
                <p style="text-align: center; margin-top: 1.5rem;">
                    <% if (isAdmin) { %>
                    Don't have an admin account? <a href="/auth/signup?admin=true" style="color: var(--secondary-color);">Sign up</a>
                    <% } else { %>
                    Don't have an account? <a href="/auth/signup" style="color: var(--secondary-color);">Sign up</a>
                    <% } %>
                </p>
            </div>
        </div>
    </section>
</main>

<%- include('../partials/footer') %>

