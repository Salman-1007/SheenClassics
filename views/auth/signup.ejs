<%- include('../partials/header') %>

<main>
    <section class="section">
        <div class="container">
            <div class="form-container">
                <h1 style="font-family: 'Playfair Display', serif; text-align: center; margin-bottom: 2rem; font-size: 2.5rem;">
                    <%= isAdmin ? 'Admin Sign Up' : 'Sign Up' %>
                </h1>
                
                <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message"><%= error %></div>
                <% } %>
                
                <form action="/auth/signup<%= isAdmin ? '?admin=true' : '' %>" method="POST">
                    <div class="form-group">
                        <label for="name">Full Name</label>
                        <input type="text" id="name" name="name" value="<%= typeof name !== 'undefined' ? name : '' %>" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" required minlength="6">
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" required minlength="6">
                    </div>
                    <% if (isAdmin) { %>
                    <input type="hidden" name="isAdmin" value="true">
                    <% } %>
                    <button type="submit" class="btn btn-add-cart" style="width: 100%;">Sign Up</button>
                </form>
                
                <p style="text-align: center; margin-top: 1.5rem;">
                    Already have an account? <a href="/auth/login<%= isAdmin ? '?admin=true' : '' %>" style="color: var(--secondary-color);">Login</a>
                </p>
            </div>
        </div>
    </section>
</main>

<%- include('../partials/footer') %>


